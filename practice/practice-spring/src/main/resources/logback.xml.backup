<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <property name="LOG_HOME" value="../logs"/>
    <appender name="info"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{Eagleeye-Traceid}] %-5level [%thread] %logger{15}:%line - %msg%n
            </pattern>
        </encoder>
        <!--滚动策略 -->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径 -->
            <fileNamePattern>${LOG_HOME}/practice-spring-info.%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="error"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{Eagleeye-Traceid}] %-5level [%thread] %logger{15} %msg%n
            </pattern>
        </encoder>
        <!--滚动策略 -->
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--路径 -->
            <fileNamePattern>${LOG_HOME}/practice-spring-error.%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>
    </appender>

    <!--在 application.yaml 的 logging 配置即可 -->
    <!--<logger name="org.mybatis" level="debug" additivity="false">
        <appender-ref ref="error" />
        <appender-ref ref="info" />
    </logger>-->

    <root level="info">
        <appender-ref ref="error"/>
        <appender-ref ref="info"/>
    </root>

</configuration>
